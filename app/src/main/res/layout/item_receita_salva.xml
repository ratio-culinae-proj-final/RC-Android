<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgReceita"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Imagem da receita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRounded" />

    <TextView
        android:id="@+id/txtNomeReceita"
        style="@style/TextButtonBold"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:paddingLeft="5dp"
        android:text="Nome da Receita"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgReceita"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDificuldadeReceita"
        style="@style/CorpoTexto"
        android:layout_width="251dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:text="Dificuldade: MÃ©dia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@id/imgReceita"
        app:layout_constraintTop_toBottomOf="@id/txtNomeReceita" />

</androidx.constraintlayout.widget.ConstraintLayout>
