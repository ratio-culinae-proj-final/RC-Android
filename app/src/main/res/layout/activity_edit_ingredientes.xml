<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8EE"
    tools:context=".screens.EditIngredientesActivity">

    <TextView
        android:id="@+id/tvTituloIngredientes3"
        style="@style/Titulo"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:text="Editar Ingrediente"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/barraDecorativa4"
        android:layout_width="240dp"
        android:layout_height="10dp"
        android:background="@drawable/decorative_bar"
        app:layout_constraintEnd_toEndOf="@+id/tvTituloIngredientes3"
        app:layout_constraintStart_toStartOf="@+id/tvTituloIngredientes3"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloIngredientes3" />

    <EditText
        android:id="@+id/idNovoNome"
        android:layout_width="353dp"
        android:layout_height="50dp"
        style="@style/CorpoTexto"
        android:textSize="18sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_background_gray"
        android:ems="10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Nome"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="@+id/barraDecorativa4"
        app:layout_constraintStart_toStartOf="@+id/barraDecorativa4"
        app:layout_constraintTop_toBottomOf="@+id/barraDecorativa4" />

    <EditText
        android:id="@+id/idNovaQuantidade"
        android:layout_width="353dp"
        android:layout_height="50dp"
        style="@style/CorpoTexto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background_gray"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="number"
        android:paddingHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="@+id/idNovoNome"
        app:layout_constraintStart_toStartOf="@+id/idNovoNome"
        app:layout_constraintTop_toBottomOf="@+id/idNovoNome" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idNovaQuantidade"
        app:srcCompat="@drawable/delete_24px" />

    <TextView
        android:id="@+id/tvDeletar"
        style="@style/CorpoTexto"
        android:layout_width="217dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:text="Deletar Ingrediente"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnDelete"
        app:layout_constraintTop_toBottomOf="@+id/idNovaQuantidade" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSalvarEdit"
        style="@style/TextButtonBold"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_background_orange"
        android:text="Salvar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelete" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelarEdit"
        style="@style/TextButtonBold"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background_brown"
        android:text="Cancelar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvarEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>
